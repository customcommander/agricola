{
  "context": {
    "turn": 1,
    "family": 2,
    "workers": 2,
    "supply": {
      "wood": 0,
      "clay": 0,
      "reed": 0
    },
    "farmyard": {
      "A1": null,
      "A2": null,
      "A3": null,
      "A4": null,
      "A5": null,
      "B1": {
        "type": "wooden_hut"
      },
      "B2": null,
      "B3": null,
      "B4": null,
      "B5": null,
      "C1": {
        "type": "wooden_hut"
      },
      "C2": null,
      "C3": null,
      "C4": null,
      "C5": null
    },
    "tasks": {
      "101": {
        "selected": false,
        "done": false
      },
      "104": {
        "selected": false,
        "done": false
      },
      "107": {
        "selected": false,
        "done": false,
        "hidden": false,
        "quantity": 2
      },
      "108": {
        "selected": false,
        "done": false,
        "hidden": false,
        "quantity": 1
      },
      "109": {
        "selected": false,
        "done": false,
        "hidden": false,
        "quantity": 1
      }
    }
  },
  "initial": "init",
  "states": {
    "init": {
      "after": {
        "200": "work"
      }
    },
    "work": {
      "initial": "select_task",
      "states": {
        "select_task": {
          "on": {
            "task.selected": {
              "target": "perform_task",
              "actions": "task-start"
            }
          }
        },
        "perform_task": {
          "on": {
            "task.completed": [
              {
                "target": "select_task",
                "guard": "has_workers",
                "actions": "task-stop"
              },
              {
                "target": "done",
                "actions": "task-stop"
              }
            ]
          }
        },
        "done": {
          "type": "final"
        }
      },
      "onDone": [
        {
          "target": "harvest",
          "guard": "is_harvest_time"
        },
        {
          "target": "work",
          "actions": "setup_new_turn"
        }
      ]
    },
    "harvest": {
      "initial": "fields",
      "states": {
        "fields": {
          "after": {
            "200": "feed"
          }
        },
        "feed": {
          "after": {
            "200": "breed"
          }
        },
        "breed": {
          "after": {
            "200": "done"
          }
        },
        "done": {
          "type": "final"
        }
      },
      "onDone": [
        {
          "target": "game_over",
          "guard": "is_last_turn"
        },
        {
          "target": "work",
          "actions": "setup_new_turn"
        }
      ]
    },
    "game_over": {
      "type": "final"
    }
  },
  "on": {
    "space.selected": {
      "actions": "forward-to-action-daemon"
    },
    "game.update": {
      "actions": "game-update"
    }
  }
}

